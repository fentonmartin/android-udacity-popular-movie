<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/app_content_margin_side">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/app_content_margin_side"
        android:adjustViewBounds="true"
        android:src="@drawable/icon_movie" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_content_margin_side"
        android:layout_marginRight="@dimen/app_content_margin_side"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/appText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_card_margin_side"
            android:textColor="@color/appText" />

    </LinearLayout>

</LinearLayout>