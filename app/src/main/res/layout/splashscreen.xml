<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.fenproductions.movietoday.fen.fenproductions.movietoday.activity.Splashscreen">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="@dimen/app_button_menu"
        android:layout_height="@dimen/app_button_menu"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/app_logo" />

    <ProgressBar
        android:id="@+id/splash_load"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indeterminate="false"
        android:max="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splash_image"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/app_text_size_big"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_image"
        android:layout_centerHorizontal="true"
        android:text="@string/app_fen"
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textSize="@dimen/app_text_size" />

</RelativeLayout>
